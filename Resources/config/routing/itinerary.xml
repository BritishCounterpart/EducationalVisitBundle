<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="cis_educational_visit.itinerary.upload" path="/{id}/upload">
        <default key="_controller">CisEducationalVisitBundle:Itinerary:upload</default>
    </route>

    <route id="cis_educational_visit.itinerary.delete" path="/{id}/delete">
        <default key="_controller">CisEducationalVisitBundle:Itinerary:delete</default>
    </route>

    <route id="cis_educational_visit.itinerary.download" path="/{id}/download">
        <default key="_controller">CisEducationalVisitBundle:Itinerary:download</default>
    </route>

    <route id="cis_educational_visit.itinerary" path="/{id}">
        <default key="_controller">CisEducationalVisitBundle:Itinerary:index</default>
    </route>        
    
</routes>
