<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="cis_educational_visit.approval.request" path="/{id}/request">
        <default key="_controller">CisEducationalVisitBundle:Approval:request</default>
    </route>

    <route id="cis_educational_visit.approval.approve" path="/{id}/approve">
        <default key="_controller">CisEducationalVisitBundle:Approval:approve</default>
    </route>

    <route id="cis_educational_visit.approval.reject" path="/{id}/reject">
        <default key="_controller">CisEducationalVisitBundle:Approval:reject</default>
    </route>

</routes>
